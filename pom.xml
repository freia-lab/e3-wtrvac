<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.iter.codac.units</groupId>
    <artifactId>epics-wtrvac-freia</artifactId>
    <packaging>codac</packaging>
    <version>1.6</version>
    <name>CODAC Core System epics-wtrvac-freia module</name>
    <description>CODAC Core System epics-wtrvac-freia module</description>
    <url>http://www.ess.org/</url>
 
    <!-- project properties -->
    <properties>
        <unit.type>module</unit.type>
        <module.name>wtrvac-freia</module.name>
    </properties>

    <!-- parent pom.xml -->
    <parent>
        <groupId>org.iter.codac.units</groupId>
        <artifactId>maven-iter-settings</artifactId>
        <version>4.1.0</version>
    </parent>

    <!-- unit owner and developers -->
    <developers>
        <developer>
            <id>konrad</id>
            <roles>
                <role>unit owner</role>
            </roles>
        </developer>
    </developers>

    <!-- configuration of how the project is built -->
    <build>
        <!-- default phase is compile -->
        <defaultGoal>compile</defaultGoal>
        <!-- this command is executed if you just write 'mvn' -->
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-iter-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <packaging>
                        <package name="opi">
                            <include type="boy" file="*" />
                            <include file="Hnoss-top.opi" topopi="true" type="boy"/>
 #                           <include type="databrowser" file="*" />
 #                           <include type="boy" file="*-SDDMain.opi" topopi="true" />
                        </package>
                        <package name="ioc">
                            <include type="ioc" name="wtrvac-freia" runlevels="345" />
                        </package>
                        <package name="src">
                       	    <include type="source" source="./src/main/epics" target="epics/apps/${module.name}/src"/>
                       	</package>
                     </packaging>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
