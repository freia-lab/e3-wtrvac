  field(EVNT, "$(INIT_EVNT)")
  field(SCAN, ".5 second")
}



# Input/output records


record(calcout, "CstatH-Vac:TP001:cOn-rbk") {
  field(INPA, "CstatH-Vac:TP001:sStatus")
  field(CALC, "(A>1)&&(A<6)?1:0")
  field(SCAN, "Event")
  field(EVNT, "$(INIT_EVNT)")
  field(OUT, "CstatH-Vac:TP001:cOn PP")
}

